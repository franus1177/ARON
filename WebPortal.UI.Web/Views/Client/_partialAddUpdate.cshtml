                        </div>

                        <div id="tab3" class="tab-pane">
                            <div class="row">
                                <div class="col-md-7 col-xs-12">
                                    <table class="table table-striped table-bordered table-hover dataTable no-footer" id="tblGridCustomerContact" role="grid" aria-describedby="tblGridContact_info">
                                        <template>
                                            ContactInformation
                                        </template>
                                        <thead>
                                            <tr role="row">
                                                <th class="col-lg-5 col-md-5">ContactName</th>
                                                <th class="col-lg-3 col-md-3">Email</th>
                                                <th class="col-lg-2 col-md-2">Mobile</th>
                                                <th class="col-lg-1 col-md-1 sorting_disabled"></th>
                                                <th class="col-md-1 col-xs-1 DeleteColumn sorting_disabled"></th>
