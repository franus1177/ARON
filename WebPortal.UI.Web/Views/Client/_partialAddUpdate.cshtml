@using WebPortal.UI.Web.GlobalResource;
<style type="text/css">
    .ace-file-input .ace-file-container:before {
        background-color: #fff !important;
    }
</style>

<div  id="widget-container-col-10" class="col-sm-12 widget-container-col ui-sortable">
    <div class="widget-box ui-sortable-handle" id="widget-box-10">
        <div class="widget-header widget-header-small">
            <div class="pull-right" title="Close">
                <i onclick="customer.SetForClose();" style="cursor:pointer;margin-top:3px;margin-right: 6px;color: black;" class="fa fa-window-close fa-2x"></i>
            </div>
            <div class="widget-toolbar no-border pull-left">
                <ul class="nav nav-tabs" id="myTab">
                    <li class="active">
                        <a data-toggle="tab" href="#tab1" aria-expanded="true">GeneralInformation</a>
                    </li>
                    @*<li id="tabAddress">
                            <a data-toggle="tab" href="#tab2" aria-expanded="false">AddressInfomation</a>
                        </li>
                        <li id="tabContact">
                            <a data-toggle="tab" href="#tab3" aria-expanded="false">ContactInformation</a>
                        </li>
                        <li id="tabHoliday">
                            <a data-toggle="tab" href="#tab4" aria-expanded="false">Holiday</a>
                        </li>
                        <li id="tabWeeklyOff">
                            <a data-toggle="tab" href="#tab5" aria-expanded="false">WeeklyOff</a>
                        </li>*@
                </ul>
            </div>
        </div>
        <div class="widget-body">
            <div class="widget-main padding-6">
                <div class="tab-content">
                    <div id="tab1" class="tab-pane active">
                        <div class="row">
                            <div class="col-md-12 col-xs-12">
                                <div class="panel-body" style="padding: 8px 2px;">
                                    <div class="row">
                                        <div class="col-md-12 col-xs-12">
                                            <div class="form-group">
                                                <label class="control-label">Customer Name</label><asterisk></asterisk>
                                                <input type="text" id="txtCustomerName" autofocus class="form-control" maxlength="50" placeholder="CustomerName" />
                                                <p class="help-block"></p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12 col-xs-12">
                                            <div class="form-group">
                                                <label class="control-label">Contact No.</label>
                                                <input type="text" id="txtContactNo" class="form-control" maxlength="15" placeholder="Contact No." />
                                                <p class="help-block"></p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12 col-xs-12">
                                            <div class="form-group">
                                                <label class="control-label">DOB</label>
                                                <input type="text" id="txtContactDOB" class="form-control" maxlength="11" placeholder="dd-mm-yyyy" />
                                                <p class="help-block"></p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12 col-xs-12">
                                            <div class="form-group">
                                                <label class="control-label">Anniversary</label>
                                                <input type="text" id="txtAnniversary" class="form-control" maxlength="11" placeholder="Anniversary dd-mm-yyyy" />
                                                <p class="help-block"></p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12 col-xs-12">
                                            <div class="form-group">
                                                <label class="control-label">Address</label>
                                                <textarea type="text" id="txtLegalEntityName" class="form-control" maxlength="50" placeholder="LegalEntityName" rows="5"></textarea>
                                                <p class="help-block"></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="panel-footer">
                                    <input type="hidden" id="HCustomerLocation" />
                                    <button type="button" id="btn_Save_Data" onclick="customer.AddUpdate();" class="btn btn-success btn-round"><i class="fa fa-save"></i>&nbsp;&nbsp;Save</button>
                                    <button type="button" id="btn_Reset_Data" onclick="customer.ResetData();" class="btn btn-warning btn-round"><i class="fa fa-history"></i>&nbsp;&nbsp;Reset</button>
                                </div>
                            </div>
                        </div>
                    </div>

