    <script src="~/Areas/Safety/Scripts/SafetyDashboardYearlySnapshot.js?@jq"></script>
    <script src="~/Areas/Safety/Scripts/SafetyDashboardDeviations.js?@jq"></script>
    <script src="~/Areas/Safety/Scripts/SafetyDashboardTop5Deviations.js?@jq"></script>
    <script src="~/Areas/Safety/Scripts/SafetyDashboardPlansAndAssets.js?@jq"></script>
    <script src="~/Areas/Safety/Scripts/SafetyDashboardActiveAssetsPlannersAndDeviations.js?@jq"></script>
}




