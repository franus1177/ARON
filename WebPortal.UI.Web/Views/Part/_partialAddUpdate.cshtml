@using WebPortal.UI.Web.GlobalResource;
<div class="panel panel-default">
    <div class="panel-heading">
        <i class="fa fa-check-square-o"></i>&nbsp;&nbsp;<span>@Resource.Part</span>
        <div class="pull-right" title="@Resource.Close"><i onclick="Part.SetForClose();" style="cursor:pointer;margin-top: -3px;" class="fa fa-window-close fa-2x"></i></div>
    </div>
    <div class="panel-body">
        <form action="#" id="frm_PartAddUpdate">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <label class="control-label">@Resource.Part:</label><asterisk></asterisk>
                        <input type="text" id="txtPartName" class="form-control" maxlength="200" placeholder="@Resource.Part" />
                        <p class="help-block"></p>
                    </div>
                </div>

                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <label class="control-label">@Resource.Vendor:</label>
                        <input type="text" id="txtPartVendor" class="form-control" maxlength="200" placeholder="@Resource.Vendor" />
                        <p class="help-block"></p>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                    <div class="form-group">
                        <label class="control-label">@Resource.Cost:</label>
                        <input type="text" id="txtPartCost" class="form-control Amount text-right" maxlength="9" placeholder="@Resource.Cost" />
                        <p class="help-block"></p>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                    <div class="form-group">
                        <label class="control-label">@Resource.Quantity:</label>
                        <input type="text" id="txtPartQuantity" class="form-control Number" maxlength="200" placeholder="@Resource.Quantity" />
                        <p class="help-block"></p>
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <label class="control-label">@Resource.Description:</label>
                        <input type="text" id="txtPartDescription" class="form-control" maxlength="200" placeholder="@Resource.Description" />
                        <p class="help-block"></p>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="panel-footer">
        <input type="hidden" id="hf_PartID" value="" />
        <button type="button" onclick="Part.AddUpdate();" class="btn btn-success btn-round"><i class="fa fa-save"></i>&nbsp;&nbsp;@Resource.Save</button>
        <button type="button" onclick="Part.ResetDataAddUpdate();" class="btn btn-warning btn-round"><i class="fa fa-history"></i></button>
        <button type="button" title="@Resource.Close" onclick="Part.SetForClose();" class="btn btn-round pull-right"><i class="fa fa-times"></i>&nbsp;&nbsp;@Resource.Close</button>
    </div>
</div>