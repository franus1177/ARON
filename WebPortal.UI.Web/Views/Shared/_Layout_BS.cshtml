        if ('ontouchstart' in document.documentElement) document.write("<script src='assets/js/jquery.mobile.custom.min.js?@jq'>" + "<" + "/script>");
    </script>
    <script src="~/assets/js/bootstrap.min.js?@jq"></script>

    @RenderSection("Scripts", required: false)

    <script src="~/assets/js/toastr.js?@jq"></script>

    <!-- Export to excel -->
    <script src="~/assets/js/tableExport/tableExport.js?@jq"></script>
    <script src="~/assets/js/tableExport/jquery.base64.js?@jq"></script>
    <!-- page specific plugin scripts -->
    <!-- ace scripts -->
    <script src="~/assets/js/ace-elements.min.js?@jq"></script>
    <script src="~/assets/js/ace.min.js?@jq"></script>

    <!-- inline scripts related to this page -->
    <!-- page specific plugin scripts -->
    <script src="~/assets/js/jquery.dataTables.min.js?@jq"></script>
    <script src="~/assets/js/jquery.dataTables.bootstrap.min.js?@jq"></script>

    <script src="~/assets/js/jquery.tmpl.min.js?@jq"></script>
    <!-- not to put bottom -->

    <script src="~/assets/js/jquery-ui.min.js?@jq"></script>

    <script src="~/assets/js/bootstrap-datepicker.min.js?@jq"></script>
    <script src="~/assets/js/jquery.confirm.min.js?@jq"></script>
    <script type="text/javascript">
        if (localStorage["GetConfigurationData"] == null || localStorage["GetConfigurationData"] == undefined) {
            var ConfigurationDataJson = '@Html.Raw(getConfigurationDataJson)';
            SetConfigurationData(ConfigurationDataJson);
        }
    </script>
    @Html.Partial("~/Views/Shared/_ResourceInJsonList.cshtml")
</body>
</html>